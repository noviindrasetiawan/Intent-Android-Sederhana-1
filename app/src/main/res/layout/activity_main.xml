<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82828F"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/IVUty"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/logo_uty" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/IVUty"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/TVJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="CEK NILAI"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/INim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVJudul">

                <EditText
                    android:id="@+id/ETNim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Nim"
                    android:inputType="textPersonName"
                    android:textColor="#000000"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/INama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/INim">

                <EditText
                    android:id="@+id/ETNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Nama"
                    android:inputType="textPersonName"
                    android:textColor="#000000"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/INilai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/INama">

                <EditText
                    android:id="@+id/ETNilai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Nilai"
                    android:inputType="text"
                    android:textColor="#000000"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/BProses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/INilai"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="#DD0707"
                android:text="PROSES"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/TVLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/BProses"
                android:text="Universitas Teknologi Yogyakarta | http://uty.ac.id"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>